import javafx.application.Application;
import javafx.scene.Scene;
import javafx.stage.Stage;
import javafx.scene.layout.FlowPane;
import javafx.scene.control.TextField;
import javafx.scene.control.Button;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;
import java.io.*;
public class CH10_FileOrganizer extends Application {
	private TextField fileNameField;
	private TextField firstLineField;
	public static void main(String[] args)
	{
	launch(args);
	}
	@Override
	public void start(Stage primaryStage) throws Exception
	{
	final int WIDTH =400;
	final int HEIGHT =300;
	final int NUMBER_OF_PIXELS =350;
	FlowPane root =new FlowPane();
	Button mul = new Button("Multiply");
	mul.setOnAction(new EventHandler<ActionEvent>()
	{
	@Override
	public void handle(ActionEvent event)
	{
	mul();
	}
	}
	);
	
	Button restButon =new Button("Reset");
	restButon.setOnAction(new EventHandler<ActionEvent>()
	{
	@Override
	public void handle(ActionEvent evnt)
	{
	resetFields();
	}
	}
	);
	fileNameField =new TextField("Enter Output file name here");
	fileNameField.setPrefWidth(NUMBER_OF_PIXELS);
	root.getChildren().add(fileNameField);
	firstLineField =new TextField("Enter Integer Number");
	firstLineField.setPrefWidth(NUMBER_OF_PIXELS);
	root.getChildren().add(firstLineField);
	root.getChildren().add(mul);
	root.getChildren().add(restButon);
	Scene scene =new Scene(root, WIDTH, HEIGHT);
	primaryStage.setTitle("File Organizer");
	primaryStage.setScene(scene);
	primaryStage.show();
}
	private void mul( )
	{
	Scanner fileInput =null;
	PrintWriter fileOutput=null;
	String fileName =fileNameField.getText();
	File fileObject =new File("input.txt");
	int k=Integer.parseInt(firstLineField.getText());
	{
	try
	{
	fileInput =new Scanner(fileObject);
	fileOutput=new PrintWriter(new File(fileName));
	}
	catch(FileNotFoundException e)
	{
	firstLineField.setText("Erorr openig the file "+
	fileName);
	}
	while(fileInput.hasNextLine()) {
	int num =Integer.parseInt(fileInput.nextLine());
	fileOutput.println(k*num);
	}
	fileNameField.setText("Output file : "+fileName);
	firstLineField.setText("Completed!");
	
	fileInput.close( );
	fileOutput.close();

	
	}
	}
	private void resetFields()
	{
	fileNameField.setText("Enter file name here.");
	firstLineField.setText("Enter Integer Number");
	}
	
	}
